<Window x:Class="FInace.Options"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FInace"
        mc:Ignorable="d"
        Title="Options" Height="450" Width="800">
    <Grid>
        <Button x:Name="breakdownButton" Content="Breakdown" HorizontalAlignment="Left" Margin="112,71,0,0" VerticalAlignment="Top" Width="75" Click="breakDown"/>
        <Button x:Name="addObjectButton" Content="Manage Child and Contributor" HorizontalAlignment="Left" Margin="112,113,0,0" VerticalAlignment="Top" Width="150" Click="addObject"/>
        <Button x:Name="monthlyButton" Content="Manage Monthly Expenses" HorizontalAlignment="Left" Margin="112,152,0,0" VerticalAlignment="Top" Width="150" Click="monthly"/>
        <Button x:Name="restartButton" Content="Reset All" HorizontalAlignment="Left" Margin="112,191,0,0" VerticalAlignment="Top" Width="75" Click="restart"/>
        <Button x:Name="subButton" Content="Manage Sub-Account" HorizontalAlignment="Left" Margin="112,233,0,0" VerticalAlignment="Top" Width="125" Click="sub"/>
        <Button x:Name="closeButton" Content="Close" HorizontalAlignment="Left" Margin="112,280,0,0" VerticalAlignment="Top" Width="75" Click="close"/>

    </Grid>
</Window>
